/* include */

#include <include.h>
#include <Serial/Serial.h>
//#include <Wire/Wire.h>
#include <SPI/SPIClass.h>
//#include <RFID/MFRC522.h>
//#include <Liquid_LCD/LiquidCrystal_SPi.h>

/* Private define */

/* Private typedef */

/* Private function prototypes */

/* Private functions */
/* Private variable */

/************************************************************/
/*                  MAIN FUNCTION							*/
/************************************************************/
SPIClass spi2 = SPIClass(2);
void spiEvent2()
{
	uint8_t data = spi2.read();
	Serial.println(data);
	spi2.write(45);
}
void spiEvent()
{
	uint8_t data = SPI.read();
	Serial.println(data);
	SPI.write(12);
}
int main(void)
{
	spi2.begin(SPI_Mode_Slave);
	spi2.attachInterrupt(spiEvent2);
	SPI.begin(SPI_Mode_Slave);
	SPI.attachInterrupt(spiEvent);
	Serial.begin(115200);
	pinMode(C13, OUTPUT);
	Serial.println("READY!!!!!!");
	int a = 0;
	while (1)
	{
//	    a = SPI.transfer(0);
//	    delayMicroseconds (50);
//	    digitalWrite(SPI1_GPIO, SPI1_PIN_NSS, HIGH);
	    delay(1000);
	    Serial.println(a);
	}
}
